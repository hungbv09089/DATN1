<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.activity.OTPConfirmActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/bg_btn_login"
        android:fontFamily="@font/roboto_regular"
        android:paddingVertical="16dp"
        android:text="Xác nhận"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_btn_login"
        android:fontFamily="@font/roboto_regular"
        android:paddingVertical="16dp"
        android:text="Hủy"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/button" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@drawable/line"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toEndOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/button" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="Nhập mã xác nhận "
        android:textColor="#DF1F28"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19999999" />

    <EditText
        android:id="@+id/edt_otp1"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberSigned"
        android:maxLength="01"
        android:singleLine="true"
        android:textCursorDrawable="@null"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/edt_otp4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.44" />

    <EditText
        android:id="@+id/edt_otp2"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberSigned"
        android:maxLength="01"
        android:singleLine="true"
        android:textCursorDrawable="@null"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/edt_otp6"
        app:layout_constraintEnd_toStartOf="@+id/edt_otp3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edt_otp6"
        app:layout_constraintTop_toTopOf="@+id/edt_otp6" />

    <EditText
        android:id="@+id/edt_otp3"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberSigned"
        android:maxLength="01"
        android:singleLine="true"
        android:textCursorDrawable="@null"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/edt_otp2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edt_otp2"
        app:layout_constraintTop_toTopOf="@+id/edt_otp2" />

    <EditText
        android:id="@+id/edt_otp4"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberSigned"
        android:maxLength="01"
        android:singleLine="true"
        android:textCursorDrawable="@null"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/edt_otp1"
        app:layout_constraintEnd_toStartOf="@+id/edt_otp5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edt_otp1"
        app:layout_constraintTop_toTopOf="@+id/edt_otp1" />

    <EditText
        android:id="@+id/edt_otp5"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberSigned"
        android:maxLength="01"
        android:singleLine="true"
        android:textCursorDrawable="@null"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/edt_otp4"
        app:layout_constraintEnd_toStartOf="@+id/edt_otp6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edt_otp4"
        app:layout_constraintTop_toTopOf="@+id/edt_otp4" />

    <EditText
        android:id="@+id/edt_otp6"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberSigned"
        android:maxLength="01"
        android:singleLine="true"
        android:textCursorDrawable="@null"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/edt_otp5"
        app:layout_constraintEnd_toStartOf="@+id/edt_otp2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edt_otp5"
        app:layout_constraintTop_toTopOf="@+id/edt_otp5" />

</androidx.constraintlayout.widget.ConstraintLayout>